[core]
  ignorecase = true
  editor = /usr/bin/vim
  excludesfile = /Users/nsiddiqui/.gitignore_global
  push = tracking
[github]
  user = nvd
  token = 4d8b3e772602d40e51ebcc0f31600c02
[user]
  email = nsiddiqui@fairfaxmedia.com.au
  name = Naveed Siddiqui
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  rb = rebase
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  lodf = log fairfax/master..fairfax/develop --oneline

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard

  # Uncomment for using SourceGear DiffMerge
[diff]
  prompt = false
  tool = diffmerge
[difftool]
  prompt = false
[difftool "diffmerge"]
  cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
  prompt = false
  tool = diffmerge
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
  trustexitcode = false
